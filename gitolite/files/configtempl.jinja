# saltstack managed configuration variables for gitolite
# do not edit this file manually changes will be overwritten by saltstack
%RC = ({{- '\n    ' -}}
{%- for sect, sect_data in confdict.conf.items()|default({}) -%}
  {%- if sect_data is mapping -%}
    {{sect}} => { {{- '\n    ' -}}
    {%- for subsect, subsect_data in sect_data.items()|default({}) -%}
      {{- '    ' -}}{{'%-16s'|format(subsect)}} =>  {{subsect_data}},{{- '\n    ' -}}
    {%- endfor -%}
    },{{- '\n    ' -}}
  {%- elif sect_data is iterable and sect_data is not string -%}
    {{sect}} => [ {{- '\n    ' -}}
    {%- for subsect in sect_data|default([]) -%}
      {{- '    ' -}}{{subsect}},{{- '\n    ' -}}
    {%- endfor -%}
    ],{{- '\n    ' -}}
  {%- else -%}
    {{'%-20s'|format(sect)}} =>  {{sect_data}},{{- '\n    ' -}}
  {%- endif -%}{{- '\n    ' -}}
{%- endfor %}
);

